{
    "name": "Weather info",
    "version": "1.0.0",
    "description": "Get weather updates for your current location",
    "manifest_version": 3,
    "author": "Aditya Pathak",
    "permissions": [
        "storage",
        "geolocation"
    ],
    "host_permissions": [
        "https://api.openweathermap.org/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Weather Info"
    }
}